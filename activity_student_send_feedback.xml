<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ab1.excuseme.student_send_feedback">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Feedback"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/S_Class_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Name:"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="94dp"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/Entered_Class"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/S_Section_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Entered_Class_Section"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:text="Section Name:"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="204dp" />

    <TextView
        android:id="@+id/S_Feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Entered_Feedback"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:text="Feedback (up to 240 characters):"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="308dp" />

    <EditText
        android:id="@+id/Entered_Class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name of Class"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="126dp"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/S_Section_Name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/Entered_Class_Section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Entered_Feedback"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="69dp"
        android:ems="10"
        android:hint="Enter Class Section"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="244dp" />

    <EditText
        android:id="@+id/Entered_Feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Feedback"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="348dp"
        android:layout_marginBottom="49dp"
        android:layout_above="@+id/Send_Feedback"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Send_Feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="443dp"
        android:layout_alignBaseline="@+id/Cancel_Feedback"
        android:layout_alignBottom="@+id/Cancel_Feedback"
        android:layout_toRightOf="@+id/Cancel_Feedback"
        android:layout_toEndOf="@+id/Cancel_Feedback"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <Button
        android:id="@+id/Cancel_Feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="443dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/S_Class_Name"
        android:layout_toEndOf="@+id/S_Class_Name"
        android:layout_marginBottom="36dp" />
</RelativeLayout>
